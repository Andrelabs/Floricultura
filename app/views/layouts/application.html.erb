<!DOCTYPE html>
<html>
<head>
  <title>Lojavirtual</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  
</head>
<body>
	<div class="container">
		<% [:notice , :error].each do |key| %>
			<% unless flash[key].blank? %>
				<div class="alert-message <%= key %>">
					<a class="close" href="javascript:void(0)"> &times; </a>
					<p> <strong> <%= flash[key] %></strong> </p>
				</div>
			<% end %>
		<% end %>
		
		<%= link_to "Produtos" , root_url %>
		<% if not pedido_atual.item.blank? %>
			<%= link_to "Meu carrinho" , itens_path %>
		<% end %>
		
		<h4> 
			Carrinho:
				<% if pedido_atual.item.count > 0 %>
					<%= pedido_atual.item.count %>
				<% else %>
					0
				<% end %>
				<% if pedido_atual.item.count > 1 %>
					Itens
				<% else %>
					Item
				<% end %>
		 </h4>

		<%= yield %>

	</div>
</body>
</html>
