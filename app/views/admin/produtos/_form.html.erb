<p>
	Nome: <br />
	<%= form.text_field :nome %>
</p>

<p>
	Preço: <br />
	<%= form.text_field :preco %>
</p>

<p>
	Quantidade: <br />
	<%= form.text_field :quantidade %>
</p>

<p>
	Categoria: <br />
	<%= form.select :categoria_produto_id , @categoria.collect{|ct| [ct.nome , ct.id ]} , {:include_blank => true} %>
</p>

<p>
	Descrição: <br />
	<%= form.text_area :descricao , :size => "35x5" %>
</p>

<p>
	<%= form.submit "Salvar" %>
</p>