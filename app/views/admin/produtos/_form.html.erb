<p>
	Nome: <br />
	<%= form.text_field :nome %>
</p>

<p>
	Preço: <br />
	<%= form.text_field :preco %>
</p>

<p>
	Imagem: <br />
	<%= form.file_field :imagem %>
</p>

<p>
	Quantidade: <br />
	<%= form.text_field :quantidade %>
</p>

<p>
	Categoria: <br />
	<%= form.select :quantidade , options_for_select([["",""]] + @categoria.map { |ct| ct.nome }) %>
</p>

<p>
	Descrição: <br />
	<%= form.text_area :descricao , :size => "35x5" %>
</p>

<p>
	<%= form.submit "Salvar" %>
</p>